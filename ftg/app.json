{
  "expo": {
    "name": "FTG",
    "slug": "ftg",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/FTG1.png",
    "scheme": "ftg",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "We use your camera so you can take a photo to confirm participation in events or activities you choose to log.",
        "NSPhotoLibraryUsageDescription": "We use your photo library so you can upload a photo to confirm participation in events or activities you choose to log.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.dsfarmer77.ftg"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.dsfarmer77.ftg"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-audio",
      "expo-mail-composer"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b4cd88cc-0005-4dfc-8d21-7887dc263b8b"
      }
    }
  }
}
